    BTN(LEFT,CLICK,912,336 + 50 * n,266) // 能力
FEND

PROCEDURE CrystalConvert(n)
    BTN(LEFT,CLICK,78,231,391) // パーティー選択
    Sleep(1)
    BTN(LEFT,CLICK,935,151,281)
    Sleep(1)
    for i = 0 TO n
        BTN(LEFT,CLICK,618,203,250)
        Sleep(1)
    NEXT
FEND