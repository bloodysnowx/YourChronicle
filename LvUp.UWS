PROCEDURE SummonUnit(n)
    BTN(LEFT,CLICK,78,231,391) // パーティー選択
    Sleep(0.1)
    BTN(LEFT,CLICK,478,160,62) // レベルアップ選択
    FOR i = 0 TO 10
        Sleep(0.5)
        BTN(LEFT,CLICK,552,332 + 50 * n,157) // 召喚
    NEXT
FEND

PROCEDURE LevelUpUnit(n)
    BTN(LEFT,CLICK,78,231,391) // パーティー選択
    Sleep(0.1)
    BTN(LEFT,CLICK,478,160,62) // レベルアップ選択
    Sleep(0.1)
    // BTN(LEFT,CLICK,552,332 + 50 * n,157) // 召喚
