ActivateYourChronicle()

DIM i = 0

WHILE TRUE
    // CrystalConvert(10)

    IF i = 0 THEN
        Sleep(1)
        HealSquads()
        Sleep(1)
        CompleteQuests()
        Sleep(1)
        UpdateQuests()
    ENDIF

    SummonUnit(0)

    Sleep(3)

    FOR j = 0 TO 3
        LevelUpUnit(j)
        Sleep(5)
    NEXT

    Sleep(5)

    i = (i + 1) MOD 10
WEND

